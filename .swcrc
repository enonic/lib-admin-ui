{
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "tsx": false,
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        },
        "target": "es5",
        "keepClassNames": true,
        "loose": true,
        "minify": {
            "compress": true,
            "mangle": true
        }
    },
    "exclude": [
        ".*\\.d\\.ts$",
        "/spec/",
        "/lib/"
    ],
    "module": {
        "type": "commonjs",
        "strict": true,
        "strictMode": true,
        "lazy": false,
        "noInterop": true
    },
    "sourceMaps": "inline"
}
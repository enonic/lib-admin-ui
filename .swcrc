{
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "tsx": false,
            "decorators": false,
            "dynamicImport": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true,
            "react": {
                "pragma": "createElement",
                "pragmaFrag": "Fragment",
                "importSource": "react"
            }
        },
        "target": "es5",
        "keepClassNames": true,
        "loose": true
    },
    "exclude": [
        ".*\\.d\\.ts$",
        "/spec/",
        "/lib/"
    ],
    "module": {
        "type": "commonjs",
        "strict": true,
        "strictMode": true,
        "lazy": false,
        "noInterop": true
    },
    "sourceMaps": "inline"
}
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "build/resources/main/assets/admin/common/js/",
    "declaration": false,
    "sourceMap": false,
    "declarationMap": false,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "types": [
      "core-js",
      "jquery",
      "jqueryui",
      "mousetrap",
      "q",
        "slickgrid",
        "validator"
    ]
  },
  "include": [
      "src/main/resources/assets/admin/common/js/lib.ts",
      "src/main/resources/assets/admin/common/js/types.d.ts"
  ],
  "exclude": [
    ".vscode",
    "build/**/*"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
